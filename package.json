{
  "name": "paper-raffle",
  "version": "1.0.0",
  "description": "The raffle NodeJS app for the paper project",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "dev": "cross-env BLURPAPER_ORIGIN=http://localhost:4200 BLURPAPER_MONGO_SSL_PATH=undefined ts-node-dev --respawn --transpileOnly ./src/app/app.ts",
    "prod": "tsc && cross-env BLURPAPER_ORIGIN=http://blurpaper.com BLURPAPER_MONGO_SSL_PATH=/etc/ssl/private/mongo/",
    "start": "npm-run-all --parallel watch:build watch:server --print-label",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon dist/app.js --watch dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbonev91/paper-raffle.git"
  },
  "author": "Dimitar Bonev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dbonev91/paper-raffle/issues"
  },
  "homepage": "https://github.com/dbonev91/paper-raffle#readme",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "dotenv": "^16.0.1"
  }
}
